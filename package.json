{
	"name": "cookiiies",
	"version": "2.3.1",
	"description": "A cookie popup-, banner- and sheet focused on accessibility and ui/ux.",
	"repository": {
		"url": "git+https://github.com/jonasfroeller/cookiiies.git"
	},
	"license": "MIT",
	"keywords": [
		"svelte-component",
		"cookie-banner"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && npx @tailwindcss/cli -i src/app.css -o dist/app.css && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prefix:classes": "node scripts/prefix-classes.mjs",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.16.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.52.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/package": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/vite": "^4.1.7",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"postcss": "^8.5.3",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"semantic-release": "^24.2.5",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.7",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.3",
		"vite": "^7.0.0",
		"vitest": "^3.1.4"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"bits-ui": "^1.8.0",
		"clsx": "^2.1.1",
		"esm-env": "^1.2.2",
		"lucide-svelte": "^0.511.0",
		"radix-icons-svelte": "^1.2.1",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tslib": "^2.8.1",
		"vaul-svelte": "1.0.0-next.3"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@sveltejs/kit",
			"@tailwindcss/oxide",
			"esbuild"
		],
		"overrides": {
			"devalue": "^5.3.2"
		}
	}
}
